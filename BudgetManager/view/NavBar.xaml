<UserControl x:Class="BudgetManager.view.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetManager.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <!-- Navigation StackPanel inside Border -->
        <StackPanel Name="stkNavigation" Grid.Column="0" Background="Gray" Grid.RowSpan="2" VerticalAlignment="Stretch">
            <Label Name="lblBudgetTitle" Content="" Width="380" FontSize="30" Margin="10"/>
            <Button Name="btnHome" Content="Home" Width="300" Height="30" Margin="10"/>
            <Button Name="btnAddInfo" Content="Add Information" Width="300" Height="30" Margin="10"/>
            <Button Name="btnAddCategory" Content="Add New Category" Width="300" Height="30" Margin="10"/>
            <Button Name="btnSaveAll" Content="Save All" Width="300" Height="30" Margin="10"/>
            <Button Name="btnLogOut" Content="Log Out" Width="300" Height="30" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
